<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ head_title }}</title>
    <head-placeholder token="{{ placeholder_token }}">
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body{{ attributes.addClass('bg-light') }}>

    <!-- Top Banner -->
    {% if page.top_banner %}
      <div class="region-top-banner py-2 bg-warning text-center">
        {{ page.top_banner }}
      </div>
    {% endif %}

    <!-- Header: Logo + Navigation -->
    <header class="container-fluid py-3">
      <div class="row align-items-center">
        <div class="col-md-3 d-flex align-items-center gap-2">
          <i class="bi bi-droplet-fill text-primary fs-3"></i>
          {{ page.logo }}
        </div>
        <div class="col-md-9 d-flex justify-content-end align-items-center">
          <i class="bi bi-list fs-4 me-2 d-md-none"></i>
          {{ page.navigation_menu }}
        </div>
      </div>
    </header>

    <!-- Main: Sidebar + Content -->
    <main class="container my-4">
      <div class="row">
        {% if page.left_sidebar %}
          <aside class="col-md-3 mb-3" role="complementary">
            <div class="mb-3">
              <i class="bi bi-search me-2"></i><strong>Quick Search</strong>
            </div>
            {{ page.left_sidebar }}
          </aside>
        {% endif %}

        <section class="col-md-9 col-12 content bg-white p-4 rounded shadow-sm" role="main">
          <h2><i class="bi bi-file-earmark-text me-2"></i>Main Content</h2>

          {% if page.breadcrumb %}
            <nav aria-label="breadcrumb" class="mb-3">
              <ol class="breadcrumb">
                {{ page.breadcrumb }}
              </ol>
            </nav>
          {% endif %}

          {% if page.messages %}
            <div class="alert alert-info" role="alert">
              {{ page.messages }}
            </div>
          {% endif %}

          {% if page.content_header %}
            <header class="mb-3">
              {{ page.content_header }}
            </header>
          {% endif %}

          {{ page.content }}
        </section>
      </div>
    </main>

    <!-- Footer -->
    {% if page.footer %}
      <footer class="region-footer bg-dark text-light py-4 mt-5 text-center">
        <div class="container">
          <p class="mb-2">
            <i class="bi bi-c-circle me-1"></i>Powered by Drupal |
            Made with <i class="bi bi-heart-fill text-danger"></i>
          </p>
          {{ page.footer }}
        </div>
      </footer>
    {% endif %}

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
